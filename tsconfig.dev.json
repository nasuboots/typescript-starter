{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "checkJs": true,
    "outDir": "./tsc-out",
    "types": ["node"]
  },
  "include": [
    "./.*.js",
    "./*.js",
    "./*.json",
    "./packages/*/scripts",
    "./packages/*/.*.js",
    "./packages/*/*.js",
    "./packages/*/*.json"
  ]
}
