{
  "name": "my-app",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=14.15.0"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "test": "run-p -l -c --aggregate-output lint:* unit",
    "unit": "jest --coverage --verbose",
    "test-ci": "run-p -l -c --aggregate-output lint:* unit-ci",
    "unit-ci": "jest",
    "typecheck": "tsc -b",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "clean": "rimraf dist coverage tsc-out",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/core": "^1.2.139",
    "@swc/jest": "^0.2.17",
    "@types/eslint": "^8.4.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "cpx2": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "json5": "^2.2.0",
    "lint-staged": "^12.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
