{
  "name": "my-app",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=18.16.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "run-p -l -c --aggregate-output typecheck lint:* unit",
    "unit": "jest --coverage --verbose",
    "test-ci": "run-p -l -c --aggregate-output typecheck lint:* unit-ci",
    "unit-ci": "jest",
    "typecheck": "tsc -b",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "clean": "rimraf dist coverage tsc-out",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/core": "^1.3.55",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.1",
    "cpx2": "^4.2.3",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.18",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "json5": "^2.2.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
